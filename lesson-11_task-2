import java.util.Arrays;
import java.util.Collections;

//  Создайте массив содержащий марки автомобилей, 
//  отсортируйте его сначала по возрастанию, потом по убыванию.

public class AutoBrand {
	public static void main(String args[]) {
		String[] brand = new String[] {"Mazda", "BMW", "Honda", "Mercedes", "Opel"};
		
		Arrays.sort(brand);
		for (int i = 0; i < brand.length; i++) {
			System.out.print(brand[i] + " ");
		}
		System.out.println("\nSorted reverse: ");
		Arrays.sort(brand, Collections.reverseOrder());
		for (int i = 0; i < brand.length; i++) {
			System.out.print(brand[i] + " ");
		}

	}

}
